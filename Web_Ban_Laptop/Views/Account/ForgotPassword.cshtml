@{
    ViewData["Title"] = "Quên mật khẩu";
}

<!-- Breadcrumb -->
<div class="breadcrumb-nav">
    <div class="container">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li><span>Quên mật khẩu</span></li>
        </ul>
    </div>
</div>

<div class="container" style="max-width: 600px; margin: 100px auto; padding: 0 20px;">
    <div class="auth-container">
        <div class="auth-header">
            <div class="auth-icon auth-icon-warning">
                <i class="fas fa-key"></i>
            </div>
            <h1 class="auth-title">Quên mật khẩu</h1>
            <p class="auth-subtitle">Nhập email của bạn để nhận mã OTP đặt lại mật khẩu</p>
        </div>
        
        <form asp-action="ForgotPassword" method="post" class="auth-form">
            <div asp-validation-summary="All" class="alert alert-danger" style="margin-bottom: 30px;"></div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-envelope"></i>
                    <span>Email *</span>
                </label>
                <input type="email" name="email" id="email" class="form-control form-control-lg" required placeholder="Nhập email đã đăng ký" autofocus>
                <small class="form-text">
                    <i class="fas fa-info-circle"></i>
                    Mã OTP sẽ được gửi đến email này
                </small>
            </div>

            <button type="submit" class="btn btn-primary btn-auth">
                <i class="fas fa-paper-plane"></i>
                <span>Gửi mã OTP</span>
            </button>

            <div class="auth-footer">
                <a href="@Url.Action("Login", "Account")" class="auth-link">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại đăng nhập
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
